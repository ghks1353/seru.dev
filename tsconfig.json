{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "jsx": "react",

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src"]
}